{
  "expo": {
    "name": "Yalla Chant",
    "slug": "yalla-chant",
    "scheme": "yallachant",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "io.yallachant",
      "associatedDomains": [
        "applinks:yallachant.app",
        "applinks:www.yallachant.app"
      ],
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ]
      },
      "config": {}
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "yallachant.app",
              "pathPrefix": "/chant"
            },
            {
              "scheme": "https",
              "host": "www.yallachant.app",
              "pathPrefix": "/chant"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "config": {},
      "package": "io.yallachant"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "output": "single",
      "name": "Yalla Chant",
      "shortName": "Yalla Chant",
      "description": "Discover and share football chants from around the world",
      "themeColor": "#C8102E",
      "backgroundColor": "#000000",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "/",
      "scope": "/",
      "lang": "en",
      "dir": "ltr",
      "preferRelatedApplications": false,
      "splash": {
        "backgroundColor": "#000000",
        "resizeMode": "contain",
        "image": "./assets/splash-icon.png"
      }
    },
    "plugins": [
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-8144091641472082~9855189772",
          "iosAppId": "ca-app-pub-8144091641472082~1697498150"
        }
      ],
      "expo-localization"
    ]
  }
}